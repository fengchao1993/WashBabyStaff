<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/qgray"
    android:fitsSystemWindows="true"
    tools:context="com.example.hongxingkeji.washbabystaff.ui.Activity.TroubleActivity">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:orientation="horizontal"
        android:background="@color/blue"
        >
        <ImageView
            android:id="@+id/msgimgdetail_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="@dimen/Padding5"
            android:src="@drawable/back"
            />
        <TextView
            android:id="@+id/titlename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/troubleask"
            android:gravity="center"
            android:textSize="@dimen/LogintextSzie"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font14"
        android:text="扫描衣物为:"
        android:padding="@dimen/Padding10"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/Padding10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="衣物编号："
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/Padding5"
            >
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font14"
                android:text="类型："
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font14"
                android:text="品牌："
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/Padding5"
            >
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font14"
                android:text="材质："
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font14"
                android:text="颜色："
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/Padding5"
            >
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font14"
                android:text="尺码："
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font14"
                android:text="位置："
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/Padding5"
            >
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font14"
                android:text="款式："
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/Padding10"
            android:textSize="@dimen/font14"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="该衣物放置错误，请核实！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
