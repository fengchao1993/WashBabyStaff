<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.Activity.MainActivity">
<LinearLayout
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height50"
    android:orientation="horizontal"
    android:background="@color/blue"
    >
    <TextView
        android:id="@+id/gonghao"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/percode"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/Padding10"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/titlename"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="@string/noworder"
        android:gravity="center"
        android:textSize="@dimen/LogintextSzie"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:src="@drawable/nav_iocn_notice"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>
    <LinearLayout
        android:layout_below="@id/title"
        android:id="@+id/tabcontext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/mainfrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/frag"
        android:layout_below="@id/tabcontext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <android.support.v4.app.FragmentTabHost
        android:id="@android:id/tabhost"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="0dp"
            android:layout_height="0dp">
        </FrameLayout>
    </android.support.v4.app.FragmentTabHost>
</RelativeLayout>
