<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:orientation="horizontal"
        android:background="@color/blue"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="@dimen/Padding10"
            android:src="@drawable/back"
            />
        <TextView
            android:id="@+id/titlename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/mycenter"
            android:textSize="@dimen/LogintextSzie"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/nav_iocn_notice"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.example.hongxingkeji.washbabystaff.ui.View.CircleImageView
                android:layout_width="100dp"
                android:layout_height="108dp"
                android:src="@mipmap/test"
                android:layout_marginTop="@dimen/Padding5"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font16"
            android:gravity="center"
            android:padding="@dimen/Padding5"
            android:text="@string/name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/Padding5"
            android:textSize="@dimen/font16"
            android:gravity="center"
            android:text="@string/percode"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/call"
        android:orientation="horizontal"
        android:padding="@dimen/Padding10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mycenter_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/Padding10"
            android:src="@drawable/zu5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/font18"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/Padding10"
            android:text="@string/callmain"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/Padding15"
            android:layout_weight="1"
            android:src="@drawable/more"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_divier"
        android:layout_width="match_parent"
        android:background="@color/qgray"
        android:layout_height="1.5dp">
    </TextView>
    <LinearLayout
        android:id="@+id/exit"
        android:padding="@dimen/Padding10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/Padding10"
            android:src="@drawable/zu6"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/font18"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/Padding10"
            android:text="@string/exit"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/Padding15"
            android:layout_weight="1"
            android:src="@drawable/more"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/qgray"
        android:layout_height="1dp">
    </TextView>

</LinearLayout>
